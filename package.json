{
  "name": "faas.js",
  "version": "1.1.0",
  "description": "一个 文件即服务的 docker 镜像, 支持js/ts",
  "main": "index.ts",
  "scripts": {
    "start": "bun run index.ts",
    "dev": "VERSION=$(bun --print \"require('./package.json').version\") bun --watch index.ts",
    "test": "bun test",
    "build": "VERSION=$(bun --print \"require('./package.json').version\") && docker build -t faas-js:$VERSION -t faas-js:latest ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Yrobot/FaaS.js.git"
  },
  "keywords": [
    "faas",
    "js",
    "ts",
    "bun.sh",
    "yrobot",
    "docker",
    "api"
  ],
  "author": "https://github.com/Yrobot",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/Yrobot/FaaS.js/issues"
  },
  "homepage": "https://github.com/Yrobot/FaaS.js#readme",
  "devDependencies": {
    "@types/bun": "^1.2.21"
  }
}
